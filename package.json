{
  "name": "typescript-clean-architecture",
  "version": "1.0.0",
  "description": "It is my attempt to create Clean Architecture based application in Typescript",
  "main": "index.js",
  "scripts": {
    "build": "./scripts/build.sh",
    "copy:local-env": "cp ./env/local.app.env ./dist/.env",
    "start": "node ./dist/Main.js",
    "start:local": "pnpm run copy:local-env && cd ./dist && node -r dotenv/config Main.js",
    "dev": "nodemon",
    "dev:debug": "nodemon --exec 'cp ./env/local.app.env ./.env && ts-node --inspect -r dotenv/config src/Main.ts'",
    "test": "jest --config jest.json test/unit/",
    "test:cov": "jest --config jest.json --coverage test/unit/",
    "test:e2e": "jest --config jest.json test/e2e/",
    "test:all": "jest --config jest.json",
    "lib:check": "ncu",
    "lib:upgrade": "ncu -u && pnpm install",
    "lint": "eslint '{src,test}/**/*.ts'",
    "lint:fix": "eslint --fix '{src,test}/**/*.ts'",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:studio": "prisma studio"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pvarentsov/typescript-clean-architecture.git"
  },
  "keywords": [
    "clean-architecture",
    "typescript"
  ],
  "author": "Pavel Varentsov (varentsovpavel@gmail.com)",
  "license": "MIT",
  "engines": {
    "node": ">=14"
  },
  "bugs": {
    "url": "https://github.com/pvarentsov/typescript-clean-architecture/issues"
  },
  "homepage": "https://github.com/pvarentsov/typescript-clean-architecture#readme",
  "devDependencies": {
    "@nestjs/testing": "8.0.6",
    "@types/bcryptjs": "2.4.2",
    "@types/busboy": "1.5.0",
    "@types/express": "4.17.17",
    "@types/jest": "29.4.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/minio": "7.0.15",
    "@types/node": "^24.3.0",
    "@types/passport-jwt": "3.0.8",
    "@types/passport-local": "1.0.35",
    "@types/supertest": "2.0.12",
    "@types/uuid": "9.0.1",
    "@typescript-eslint/eslint-plugin": "5.53.0",
    "@typescript-eslint/parser": "5.53.0",
    "eslint": "8.34.0",
    "jest": "29.4.3",
    "jest-junit": "15.0.0",
    "jest-sonar-reporter": "2.0.0",
    "jsonwebtoken": "9.0.0",
    "nodemon": "^3.1.10",
    "npm-check-updates": "16.7.9",
    "prisma": "^5.0.0",
    "supertest": "6.3.3",
    "ts-jest": "29.0.5",
    "ts-node": "10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "4.9.5"
  },
  "dependencies": {
    "@nestjs/common": "8.4.7",
    "@nestjs/core": "8.0.6",
    "@nestjs/jwt": "8.0.0",
    "@nestjs/passport": "8.2.2",
    "@nestjs/platform-express": "8.0.6",
    "@nestjs/swagger": "5.0.9",
    "@prisma/client": "^5.0.0",
    "bcryptjs": "2.4.3",
    "busboy": "1.6.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "dotenv": "^16.6.1",
    "env-var": "7.3.0",
    "langchain": "^0.3.31",
    "minio": "7.0.32",
    "module-alias": "2.2.2",
    "passport": "0.6.0",
    "passport-jwt": "4.0.1",
    "passport-local": "1.0.0",
    "pg": "8.9.0",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.8.0",
    "swagger-ui-express": "4.6.1",
    "uuid": "9.0.0"
  },
  "jest-junit": {
    "outputDirectory": ".coverage"
  },
  "jestSonar": {
    "sonar56x": true
  },
  "_moduleAliases": {
    "@core": "src/core",
    "@infrastructure": "src/infrastructure",
    "@application": "src/application"
  }
}
